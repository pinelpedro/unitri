class Empregado:
    def __init__(self,nome, sobrenome , Salario = 0.0):
        self._Nome = nome
        self._Sobrenome = sobrenome
        self._Salario = Salario
       
       @property
       def Nome (self):
        return self._Nome
        
       @Nome.setter
       def Nome (self, Nome):
         self._Nome = Nome


Empregado = Empregado()
Empregado.Nome = str(input(" qual seu nome? "))
Empregado.Sobrenome = str(input(" qual seu sobrenome ?"))
Empregado.Salario = int(input("qual Ã© seu salaario mensal? "))

Empregado1 = Empregado (Luis, Almeida, 100)
